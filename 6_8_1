public class Basket {

    private static int count = 0;
    private static double totalWeight = 0;
    private String items;
    private int totalPrice = 0;
    private int limit;
    private static double averagePrice;

    public Basket() {
        items = "Список товаров:";
        this.limit = 1000000;
    }

    public Basket(int limit) {
        this();
        this.limit = limit;
    }

    public Basket(String items, int totalPrice, int totalWeight) {
        this();
        this.items = this.items + items;
        this.totalPrice = totalPrice;
        this.totalWeight = totalWeight;
    }


    public static void increaseCount() {
        Basket.count = Basket.count + 1;
    }

    public void add(String name, int price, double weight) {
        add(name, price, weight,1);
    }

    public void add(String name, int price, double weight, int count) {
        boolean error = false;
        if (contains(name)) {
            error = true;
        }

        if (totalPrice + count * price >= limit) {
            error = true;
        }

        if (error) {
            System.out.println("Error occured :(");
            return;
        }

        items = items + "\n" + name + " - " +
                count + " шт. - " + price + " вес - " + weight;
        totalPrice = totalPrice + count * price;
        totalWeight = totalWeight + count*weight;
        increaseCount();
    }

    public void clear() {
        items = "";
        totalPrice = 0;
        totalWeight = 0;
    }

    public int getTotalPrice() {
        return totalPrice;
    }

    public static double getTotalWeight() {
        return totalWeight;
    }

    public double getAveragePrice() {
        averagePrice = totalPrice/count;
        return averagePrice;
    }
    public static int getCount() {
        return count;
    }

    public boolean contains(String name) {
        return items.contains(name);
    }

    public void print(String title) {
        System.out.println(title);
        if (items.isEmpty()) {
            System.out.println("Корзина пуста");
        } else {
            System.out.println(items + "\n" + "Стоимость всех товаров - " + getTotalPrice() + "\n" +"Вес всех товаров - " + getTotalWeight()+"\n" + "Кол-во товаров - " + getCount()
            +"\n" + "средняя цена товаров - " + getAveragePrice());
        }
    }
}
public class Main {

    public static void main(String[] args) {
        Basket basket = new Basket();
        basket.add("Milk", 40, 50);
        basket.add("Latte", 30, 20);
        basket.print("Корзина");
    }
}
